<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/futbolcuKapak"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kapak_foto_height"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ozgecmisi"
                android:padding="@dimen/ozgecmis_padding"
                android:textStyle="bold"
                android:textSize="@dimen/ozgecmis_text_size"/>

            <TextView
                android:id="@+id/futbolcuOzgecmis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ozgecmis_padding" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>