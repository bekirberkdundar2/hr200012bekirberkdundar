<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/futbolcuCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_margin="@dimen/cardview_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/futbolcuResim"
            android:layout_width="@dimen/futbolcu_resim_width"
            android:layout_height="@dimen/futbolcu_resim_height"
            android:scaleType="fitCenter"
            android:padding="@dimen/futbolcu_resim_padding" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/futbolcuAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cardview_futbolcu_adi_text_size"
                android:textColor="@color/darkNavyBlue"/>

            <TextView
                android:id="@+id/futbolcuUlke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cardview_futbolcu_ulke_text_size"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>